<body>
    <div class="card">
        <h1>🎉 Selamat Ulang Tahun! 🎂</h1>
        <p id="message">Klik tombol di bawah untuk mendapatkan ucapan ulang tahun yang lucu!</p>
        <button class="button" onclick="showMessage()">🎁 Buka Hadiah</button>
    </div>
    
    <script>
        function showMessage() {
            const messages = [
                "Selamat ulang tahun! Semoga umurmu bertambah, bukan berat badanmu!",
                "Hari ini spesial! Sama seperti kamu… tapi jangan terlalu GR ya!",
                "Ulang tahun adalah cara alam mengingatkan bahwa makan kue itu penting!",
                "Jangan khawatir soal bertambahnya usia, kamu tetap awet muda… di hati kami!",
                "Semoga hadiah ulang tahunmu banyak… dan semua bukan hanya doa!"
            ];
            
            document.getElementById("message").innerText = messages[Math.floor(Math.random() * messages.length)];
        }
    </script>
